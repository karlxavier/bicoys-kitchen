<div class="landing-page" style="margin-top: 100px;">
	<section class="container">
		<div class="row">
			<div class="col-xs-8 resto-menus" style="padding: 0;">
				<div class="panel-body">
                    <div class="row">
                    	<div class="col-md-3 menu-cats">
                    		<div class="ibox" id="sk-cats" data-spy="affix" data-offset-top="150" data-clampedwidth=".col-xs-3">
		               
		                        <div style="width: 150px;">
		                        	<% @weekdays.each do |weekday| %>
										<a href="#<%= weekday.id %>" style="padding: 10px 0 10px 10px;">
											<p class="text-muted">
												<%= weekday.name %>
											</p>
										</a>
		                        	<% end %>
		                        </div>
		                    </div>
                    	</div>
                    	<div class="col-md-9" style="padding: 0;">
                    		<div class="ibox collapsed border-bottom" id="sk-menus">
                    			<% @plans.each do |plan| %>
                    				<div id="cat<%= plan.id %>" style="margin-top: 20px;">
                            			<div class="ibox-title" style="border-style: none; padding-left: 8px;">
					                        <h4><%= plan.weekday.name %></h4>
					                    </div>
                                        <div class="ibox-content" id="menus" style="display: block; padding: 15px 0 0 0;">
                                        	<% plan.plan_meals.each do |pm| %>
											    <div style="margin-left: 20px;">
											    	<span><h4 class="text-muted"><%= pm.meal_type.name %></h4></span>

											        <table class="table shoping-cart-table">
											            <tbody>
											            	<% pm.menus.each do |menu| %>
											                    <tr>
											                        <td width="80">
											                        	<%= image_tag menu.image.url(:web) || asset_path('default_menu.png'), class: "img-circle", style: "width: 80px; height: 80px;" %>
											                        </td>
											                        <td class="desc">
											                            <h4 class="text-navy">
											                                <%= menu.name %>
											                            </h4>
											                            <h5>
											                                ₱ <%= number_with_precision(menu.price, :precision => 2, :delimiter => ',') %>
											                            </h5>
											                            <p class="small">
											                                <%= menu.description %>
											                            </p>
											                        </td>
											                        <td>
 
											                        </td>
											                    </tr>
										                    <% end %>

											            </tbody>
											        </table>

											    </div>
											<% end %>



										</div>
                    				</div>
            					<% end %>

                    		</div>
                    	</div>
                    </div>
                </div>
			</div>
			<div class="cart-summary">
	            <div class="col-xs-4" style="padding-left: 0;" id="order-holder">
	            	<div class="wrapper-content" style="padding-bottom: 0;">
	    	        	<div class="ibox" id="sk-orders">
	    	                <div class="ibox-title">
	    	                    <h5>Cart Summary</h5>
	    	                </div>
	    	                <div class="ibox-content" id="orders" style="padding-bottom: 2px; min-height: 80px;">
	                            <p class="text-center" style="color: #999c9e;">
									<i class="fa fa-shopping-basket fa-5x"></i> 
								</p>
								<h3 class="text-center" style="color: #999c9e;">You dont have orders yet.</h3>
	    	                </div>
	    	                <div class="ibox-footer textContainer text-center">
	    	                	<h3 class="text-center"><i class="fa fa-phone"></i> +63 297 3254</h3>
	    	                    <span class="small" style="text-align: center;">
	    	                        Need support? Call us anytime. We are avalible 24/7 ☺
	    	                    </span>
	    	                </div>
	    	            </div>
	    	        </div>
	            </div>
	        </div>
		</div>
	</section>
</div>
